<MainScreen>:

    MDBottomNavigation:
        selected_color_background: "orange"
        text_color_active: "lightgrey"

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Workout'
            icon: 'workout.png'
            on_tab_touch_down: root.RoutineScreen()

            MDFloatLayout:
                id: main_routines_layout
                radius: [25, 0, 0, 0]
                orientation: 'vertical'

                MDRaisedButton:
                    text: "+ Add Routine"
                    padding: 100, 10
                    pos_hint: {'center_x': 0.5, 'center_y': 0.92}
                    on_press: root.on_add_routine_button_press()

                MDLabel:
                    text: "Your Routines:"
                    halign: "center"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.83}

                MDScrollView:
                    size: self.size
                    size_hint_y: 0.8
                    id: routine_scroll_view
                    always_overscroll: True
                    do_scroll_y: True
                    do_scroll_x: False

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Profile'
            icon: 'profile'

            MDLabel:
                text: 'Profile'
                halign: 'center'

<EditRoutineScreen>
    MDFloatLayout:
        MDBoxLayout:
            id: edit_routine_layout
            orientation: 'vertical'
            spacing: 10
            padding: 20

        MDRaisedButton:
            text: "Save Routine"
            padding: 100, 10
            pos_hint: {'center_x': 0.5, 'center_y': 0.08}
            on_press: root.on_add_routine_button_press()

<BodyPartExercisesScreen>
    MDTextField:
        hint_text: "Search"
        size_hint: (0.8, 0.1)
        height: self.minimum_height
        padding: [10, 0, 10, 0]
        pos_hint: {"center_x": .5, "center_y": .9}
        multiline: False
    MDScrollView:
        bar_width: 0
        bar_width_x: 0
        effect_cls: "ScrollEffect"
        always_overscroll: True
        do_scroll_y: True
        do_scroll_x: False
        size_hint: (1, 0.7)
        pos_hint: {"center_x": .5, "top": .8}
        scroll_x: 0
        MDGridLayout:
            height: self.minimum_height
            size_hint_y: None
            cols: 1
            id: exercise_screen
    MDRaisedButton:
        pos_hint: {"center_x": .5, "top": .1}
        text: "Save Routine"
        on_release: root.on_add()


<ExercisesScreen>

    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            left_action_items: [['menu-left', lambda x: root.back_button()]]

        MDTabs:
            id: tabs
            on_tab_switch: root.on_tab_switch(*args)
            size_hint_y: .1

<Tab>
    MDBoxLayout:
        id: layout
